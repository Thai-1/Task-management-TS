{
    "compilerOptions": {
        // "outDir": "js", //biên dịch vào thư mục js
        "target": "ES6", //cho phép biên dịch code TS thành kiểu ES6
        "module": "commonjs", //CommonJS là tiêu chuẩn được sử dụng trong Node.js để làm việc với các moudle
        "removeComments": true, //xóa comments khi biên dịch sang file js
        "esModuleInterop": true // dùng được từ khóa import thay cho require
    }
}